{
  "name": "@arena/agent-runtime",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "prebuild": "npm run -w @arena/shared build",
    "build": "tsc -p tsconfig.json",
    "prestart": "npm run -w @arena/shared build",
    "start": "node dist/apps/agent-runtime/src/index.js",
    "lint": "eslint src --ext .ts",
    "pretest": "npm run -w @arena/shared build",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@arena/shared": "0.1.0",
    "ethers": "^6.16.0",
    "pg": "^8.18.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.18.1",
    "tsx": "^4.19.2"
  }
}
