{
  "name": "autonomous-agent-betting-arena",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run -ws build",
    "dev": "npm run -ws dev",
    "dev:up": "bash scripts/dev-up.sh",
    "lint": "npm run -ws --if-present lint",
    "test": "npm run -ws test",
    "test:playable": "node scripts/playable-smoke.mjs",
    "test:e2e": "node scripts/run-e2e.js",
    "test:e2e:run": "npx playwright test --config=playwright.e2e.config.js",
    "typecheck": "npm run -ws typecheck",
    "format": "prettier --write .",
    "migrate": "npx tsx scripts/migrate.ts up",
    "migrate:status": "npx tsx scripts/migrate.ts status",
    "migrate:rollback": "npx tsx scripts/migrate.ts rollback",
    "migrate:reset": "npx tsx scripts/migrate.ts reset",
    "load-test": "npx tsx scripts/load-test.ts",
    "load-test:heavy": "LOAD_TEST_VIRTUAL_USERS=50 LOAD_TEST_DURATION=60 npx tsx scripts/load-test.ts",
    "ops:runtime-sponsorship": "node scripts/check-runtime-sponsorship.mjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/node": "^22.13.4",
    "eslint": "^9.20.1",
    "prettier": "^3.5.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=20"
  }
}
