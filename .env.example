# Shared
NODE_ENV=development

# Web
WEB_PORT=3000
WEB_API_BASE_URL=http://localhost:4000
WEB_AGENT_RUNTIME_BASE_URL=http://localhost:4100
WEB_STATE_FILE=output/web-auth-state.json
GOOGLE_CLIENT_ID=
LOCAL_AUTH_ENABLED=true
ADMIN_USERNAME=admin
ADMIN_PASSWORD=12345
ADMIN_EMAILS=

# Game Server
SERVER_PORT=4000
PROXIMITY_RADIUS=6
REDIS_URL=redis://localhost:6379
SERVER_INSTANCE_ID=server_local_1
PRESENCE_TTL_SECONDS=40
CHALLENGE_PENDING_TIMEOUT_MS=10000
CHALLENGE_ACTIVE_RESOLVE_MS=6000
CHALLENGE_ORPHAN_GRACE_MS=30000
ESCROW_FEE_BPS=0
ESCROW_EXECUTION_MODE=runtime
# Optional onchain escrow mode (used when ESCROW_EXECUTION_MODE=onchain)
SEPOLIA_RPC_URL=
CHAIN_RPC_URL=
DEPLOYER_PRIVATE_KEY=
ESCROW_RESOLVER_PRIVATE_KEY=
ESCROW_RESOLVER_ADDRESS=
ESCROW_CONTRACT_ADDRESS=
ESCROW_TOKEN_ADDRESS=
ESCROW_FEE_RECIPIENT=
ESCROW_TOKEN_DECIMALS=6
INTERNAL_SERVICE_TOKEN=
GAS_FUNDING_PRIVATE_KEY=
MIN_WALLET_GAS_ETH=0.0003
WALLET_GAS_TOPUP_ETH=0.001

# Agent Runtime
AGENT_RUNTIME_PORT=4100
BOT_COUNT=8
GAME_WS_URL=ws://localhost:4000/ws
GRAND_AGENT_ID=agent_1
AGENT_RUNTIME_STATE_FILE=output/agent-runtime-state.json

# LLM / OpenRouter
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openrouter/auto
MAX_REQUESTS_PER_HOUR_PER_AGENT=500
MAX_TOKENS_PER_DAY_PER_AGENT=2000000

# Wallet capability policy
WALLET_SKILLS_ENABLED=true
WALLET_SKILLS=authenticate-wallet,fund,send-usdc,trade,query-onchain-data,solidity-contract-design,solidity-security-review,evm-gas-optimization
MAX_BET_PERCENT_OF_BANKROLL=5
MAX_DAILY_TX_COUNT=24
REQUIRE_ESCROW_FOR_CHALLENGES=true
