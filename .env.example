# Shared
NODE_ENV=development
GAME_WS_AUTH_SECRET=

# Web
WEB_PORT=3000
WEB_API_BASE_URL=http://localhost:4000
WEB_AGENT_RUNTIME_BASE_URL=http://localhost:4100
PLAY_RUNTIME_V2_ENABLED=false
MOBILE_LAYOUT_V2_ENABLED=false
DIRECTIONING_V2_ENABLED=false
PUBLIC_WORLD_ASSET_BASE_URL=
ALLOWED_AUTH_ORIGINS=http://localhost:3000,https://autobett.netlify.app
WEB_STATE_FILE=output/web-auth-state.json
GOOGLE_CLIENT_ID=
GOOGLE_NONCE_SECRET=
LOCAL_AUTH_ENABLED=false
# Local admin auth is a dev-only escape hatch. Leave it disabled in prod.
# If enabled, set strong credentials (do not ship defaults).
ADMIN_USERNAME=
ADMIN_PASSWORD=
ADMIN_EMAILS=

# Game Server
SERVER_PORT=4000
PROXIMITY_RADIUS=6
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgres://arena:arena@localhost:5432/arena
# Set to web server base URL to enable WebSocket session validation (e.g. http://localhost:3000)
WEB_AUTH_URL=
SERVER_INSTANCE_ID=server_local_1
PRESENCE_TTL_SECONDS=40
CHALLENGE_PENDING_TIMEOUT_MS=10000
CHALLENGE_ACTIVE_RESOLVE_MS=6000
CHALLENGE_ORPHAN_GRACE_MS=30000
ESCROW_FEE_BPS=0
ESCROW_EXECUTION_MODE=runtime
STATION_PLUGIN_ROUTER_ENABLED=false
DICE_DUEL_ENABLED=true
# Optional onchain escrow mode (used when ESCROW_EXECUTION_MODE=onchain)
# WARNING: Never commit real private keys. Use a secrets manager in production.
SEPOLIA_RPC_URL=
CHAIN_RPC_URL=
DEPLOYER_PRIVATE_KEY=
ESCROW_RESOLVER_PRIVATE_KEY=
ESCROW_RESOLVER_ADDRESS=
ESCROW_CONTRACT_ADDRESS=
ESCROW_TOKEN_ADDRESS=
ESCROW_FEE_RECIPIENT=
ESCROW_TOKEN_DECIMALS=6
ESCROW_APPROVAL_MODE_SEPOLIA=auto
ESCROW_APPROVAL_MODE_MAINNET=manual
ESCROW_APPROVAL_MODE_DEFAULT=manual
ESCROW_APPROVAL_CHAIN_ID=
ESCROW_APPROVAL_CHAIN_HINT=
ESCROW_AUTO_APPROVE_MAX_WAGER=
ESCROW_AUTO_APPROVE_DAILY_CAP=
INTERNAL_SERVICE_TOKEN=
GAS_FUNDING_PRIVATE_KEY=
MIN_WALLET_GAS_ETH=0.0003
WALLET_GAS_TOPUP_ETH=0.001

# Agent Runtime
AGENT_RUNTIME_PORT=4100
BOT_COUNT=8
GAME_WS_URL=ws://localhost:4000/ws
GRAND_AGENT_ID=agent_1
AGENT_RUNTIME_STATE_FILE=output/agent-runtime-state.json
RUNTIME_DATABASE_URL=
USER_WALLET_AUTO_FLOOR=true

# LLM / OpenRouter
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openrouter/auto
MAX_REQUESTS_PER_HOUR_PER_AGENT=500
MAX_TOKENS_PER_DAY_PER_AGENT=2000000

# Wallet capability policy
WALLET_SKILLS_ENABLED=true
WALLET_SKILLS=authenticate-wallet,fund,send-usdc,trade,query-onchain-data,solidity-contract-design,solidity-security-review,evm-gas-optimization
MAX_BET_PERCENT_OF_BANKROLL=5
MAX_DAILY_TX_COUNT=24
REQUIRE_ESCROW_FOR_CHALLENGES=true
